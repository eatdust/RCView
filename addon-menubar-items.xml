<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
  <meta>
    <file-type type="string">FlightGear add-on menu bar items</file-type>
    <format-version type="int">1</format-version>
  </meta>
  <menubar-items>
    <menu>
      <label>RCView</label>
      <enabled type="bool">true</enabled>

      <item>
        <label>RC Pilot</label>
        <binding>
          <command>dialog-show</command>
          <dialog-name>pilot-options</dialog-name>
        </binding>
      </item>

      <item>
	<label>Help</label>
	<binding>
          <command>nasal</command>
          <script>gui.popupTip("Use Alt-V within the RC View to jump to other locations");</script>
        </binding>
      </item>
      
      <!--	    
          <item>
          <label>Reload RCView</label>
          <binding>
          <command>addon-reload</command>
          <id>org.flightgear.addons.RCview</id>
          </binding>
          </item>
      -->
    </menu>
  </menubar-items>
</PropertyList>
